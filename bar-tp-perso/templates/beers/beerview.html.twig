            <p><u>Categories :</u></p>
            <ul>
              {% for category in catNormal %}
                <li>{{category.name}}</li>
              {% endfor %}
              {% for category in catSpec %}
                <li>{{category.name}}</li>
              {% endfor %}
            </ul>
    	    </div>
        </div>
    	</div>
    </div>
</div>
{% endblock %}