{% extends 'base.html.twig' %}

{% block title %}Hello BarController!{% endblock %}

{% block body %}

<div class="beers-wrapper mainWrapper">
    <h1>{{ title }}</h1>
    <div class="row">
      <div class="col-sm-6 beerCard">
        <div class="card">
          <div class="card-body">
            <img src="{{ asset('images/beer.jpeg') }}"alt="beer"/>
            <h5><u>Nom :</u> {{ beer.name }}</h5>
            <p><u>Description :</u> {{ beer.description }}</p>
            <p><u>Date :</u> {{ beer.publishedAt | date('Y-m-d') }}</p>
						<p><u>Prix :</u> {{ beer.price }} â‚¬</p>
						<p><u>Degree :</u> {{ beer.degree }}</p>
