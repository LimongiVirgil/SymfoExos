{% extends 'base.html.twig' %}

{% block title %}Hello BarController!{% endblock %}

{% block body %}

<div class="beers-wrapper mainWrapper">
    <h1>{{ title }}</h1>
    <div class="row">
    
        {% for beer in beers %}
            <div class="col-sm-6 beerCard">
                <div class="card">
                    <div class="card-body">
                        <img src="{{ asset('images/beer.jpeg') }}"alt="beer"/>
                        <h5>{{ beer.name }}</h5>
                        <p>{{ beer.description }}</p>
                        <p>{{ beer.publishedAt | date('Y-m-d') }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
