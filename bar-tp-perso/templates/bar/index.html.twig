{% extends 'base.html.twig' %}

{% block title %}Hello BarController!{% endblock %}

{% block body %}

<div class="example-wrapper mainWrapper">
    <h1>{{ title }}</h1>
    <div class="row">
        {% for beer in data %}
            <div class="col-sm-6 beerCard">
                <div class="card">
                    <div class="card-body">
                        <a href="{{ path('beer', { 'id' : beer.id }) }}"><h5>{{ beer.name }}</h5></a>
                        <p>{{ beer.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
