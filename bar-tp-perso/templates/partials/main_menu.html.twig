{% set route_name = app.request.attributes.get('_route') %}

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">BeeBars</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link {{ route_name == 'bar' ? 'active' : '' }}" href="{{ path('bar') }}">Home <span class="sr-only">(current)</span></a>
            </li>
            {% for category in normalCategories %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('beer_by_category', {'categoryName': category.name} ) }}">{{ category.name }}</a>
                </li>
            {% endfor %}
            <li class="nav-item">
                <a class="nav-link {{ route_name == 'mentions' ? 'active' : '' }}" href="{{ path('mentions') }}">Mentions</a>
            </li>
        </ul>
    </div>
</nav>